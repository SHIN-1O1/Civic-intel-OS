rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    // Check if request is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get the portal user document for the authenticated user
    function getPortalUser() {
      return get(/databases/$(database)/documents/portalUsers/$(request.auth.uid)).data;
    }
    
    // Check if user is a super admin
    function isSuperAdmin() {
      return isAuthenticated() && getPortalUser().role == 'super_admin';
    }
    
    // Check if user is a dispatcher (or super admin)
    function isDispatcher() {
      return isAuthenticated() && getPortalUser().role in ['super_admin', 'dispatcher'];
    }
    
    // Check if user is an analyst (read-only)
    function isAnalyst() {
      return isAuthenticated() && getPortalUser().role == 'analyst';
    }
    
    // Check if user is department HQ for a specific department
    function isDepartmentHQ(department) {
      let user = getPortalUser();
      return isAuthenticated() && user.role == 'department_hq' && user.department == department;
    }
    
    // Check if user is a ward officer for a specific ward
    function isWardOfficer(ward) {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && getPortalUser().role == 'ward_officer' && userData.wardAssignment == ward;
    }
    
    // ============================================
    // Portal Users Collection
    // ============================================
    match /portalUsers/{userId} {
      // Users can always read their own document (needed for role checking)
      // Super admins can read all portal users
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        (exists(/databases/$(database)/documents/portalUsers/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/portalUsers/$(request.auth.uid)).data.role == 'super_admin')
      );
      
      // Only super admin can create/update/delete portal users
      allow create, update, delete: if isSuperAdmin();
    }
    
    // ============================================
    // Tickets Collection
    // ============================================
    match /tickets/{ticketId} {
      // All authenticated users can read tickets
      // (Fine-grained department/ward filtering done in API)
      allow read: if isAuthenticated();
      
      // Only super admin and dispatcher can create tickets
      allow create: if isDispatcher();
      
      // Update with role-based restrictions
      allow update: if isAuthenticated() && (
        // Super admin and dispatcher have full access
        isSuperAdmin() ||
        isDispatcher() ||
        // Department HQ can update tickets assigned to their department
        (getPortalUser().role == 'department_hq' && 
         resource.data.assignedDepartment == getPortalUser().department) ||
        // Ward officer can update tickets in their ward
        (getPortalUser().role == 'ward_officer' && 
         resource.data.location.ward == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.wardAssignment)
      );
      
      // Only super admin can delete tickets
      allow delete: if isSuperAdmin();
    }
    
    // ============================================
    // Complaints Collection (Citizen Reports)
    // ============================================
    match /complaints/{complaintId} {
      // Portal users can read complaints
      allow read: if isAuthenticated();
      
      // ALLOW CITIZENS TO FILE COMPLAINTS
      // Must be authenticated, and userId in data must match auth.uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow updates for assignment (by portal users) or by the citizen themselves
      allow update: if isAuthenticated();
      
      // Allow users to delete their own complaints
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // Teams Collection
    // ============================================
    match /teams/{teamId} {
      // All authenticated users can read teams
      allow read: if isAuthenticated();
      
      // Only super admin and dispatcher can modify teams
      allow create, update, delete: if isDispatcher();
    }
    
    // ============================================
    // Users Collection (Internal Admin Users)
    // ============================================
    match /users/{userId} {
      // Users can read their own document, super admins can read all
      allow read: if isAuthenticated();
      
      // Only super admin can create/update/delete users
      allow create, update, delete: if isSuperAdmin();
    }
    
    // ============================================
    // Audit Logs Collection
    // ============================================
    match /auditLogs/{logId} {
      // Only super admin can read audit logs
      allow read: if isSuperAdmin();
      
      // No client-side writes - audit logs created server-side only via Admin SDK
      allow create, update, delete: if false;
    }
    
    // ============================================
    // Analytics Collection
    // ============================================
    match /analytics/{docId} {
      // All authenticated users can read analytics
      allow read: if isAuthenticated();
      
      // No client-side writes - updated server-side only
      allow create, update, delete: if false;
    }
    
    // ============================================
    // Ward Stats Collection
    // ============================================
    match /wardStats/{wardId} {
      // All authenticated users can read ward stats
      allow read: if isAuthenticated();
      
      // No client-side writes
      allow create, update, delete: if false;
    }
    
    // ============================================
    // System Feed Collection
    // ============================================
    match /systemFeed/{feedId} {
      // All authenticated users can read system feed
      allow read: if isAuthenticated();
      
      // No client-side writes - server-side only
      allow create, update, delete: if false;
    }
    
    // ============================================
    // Default Deny Rule
    // ============================================
    // Any collection not explicitly defined above is denied
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
